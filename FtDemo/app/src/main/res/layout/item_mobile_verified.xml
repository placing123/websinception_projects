<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_item_mobile_verified"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_green_bg_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_mobile_done" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.mw.fantasy.customView.CustomTextView
                android:id="@+id/ctv_mobile_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_mobile_number_is_verified"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textColor"
                app:textfont="light" />

            <com.mw.fantasy.customView.CustomTextView
                android:id="@+id/ctv_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_message"
                android:textColor="@color/textColorHint"
                app:textfont="light" />

            <com.mw.fantasy.customView.CustomTextView
                android:id="@+id/changeNo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@drawable/shedow_yellow_background"
                android:gravity="center"
                app:textfont="light"
                android:text="Change No"
                android:textAllCaps="true"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>