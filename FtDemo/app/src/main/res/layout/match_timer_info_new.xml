<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardElevation="@dimen/_8ssp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_8ssp">

                <com.mw.fantasy.customView.CustomImageView
                    android:id="@+id/civ_timmer_local"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    app:placeholderImage="@drawable/logo" />

                <com.mw.fantasy.customView.CustomTextView
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/ctv_timmer_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/bg_local"
                    android:padding="@dimen/_4sdp"
                    android:text="   "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    app:textfont="@string/MONTSERRAT_REGULAR" />


                <com.mw.fantasy.customView.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:textfont="@string/MONTSERRAT_REGULAR" />


                <com.mw.fantasy.customView.CustomTextView
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/ctv_timmer_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/bg_visitor"
                    android:padding="@dimen/_4sdp"
                    android:text="   "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp"
                    app:textfont="@string/MONTSERRAT_REGULAR" />


                <com.mw.fantasy.customView.CustomImageView
                    android:id="@+id/civ_timmer_visitor"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    app:placeholderImage="@drawable/logo" />


            </LinearLayout>

            <com.mw.fantasy.customView.CustomTextView
                android:id="@+id/ctv_full_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8ssp"
                android:layout_marginRight="@dimen/_8ssp"
                android:background="@drawable/bg_timmer"
                android:drawableTint="@color/black"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="@dimen/_100sdp"
                android:maxLines="1"
                android:minWidth="@dimen/_60sdp"
                android:paddingLeft="@dimen/_8ssp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_8ssp"
                android:paddingBottom="@dimen/_4sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:textfont="@string/MONTSERRAT_REGULAR" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8ssp"
            android:visibility="gone"
            android:weightSum="4">

            <com.mw.fantasy.customView.CustomTextView
                android:id="@+id/teamsVS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize_regular"
                app:textfont="@string/MONTSERRAT_REGULAR" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2">

                <com.mw.fantasy.customView.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="@dimen/textsize_small"
                    app:drawableLeftCompat="@drawable/ic_time"
                    app:textfont="@string/MONTSERRAT_REGULAR" />
            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>