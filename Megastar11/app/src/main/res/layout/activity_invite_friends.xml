<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.inviteFriends.InviteFriendsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:elevation="@dimen/_4sdp"
        android:gravity="center"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:tint="@color/colorPrimary"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:padding="18dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_back" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/menu"
                android:layout_toLeftOf="@+id/menu"
                android:layout_toEndOf="@+id/back"
                android:layout_toRightOf="@+id/back"
                android:gravity="center"
                android:src="@drawable/fantasy_logo_text" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/menu"
                android:layout_toLeftOf="@+id/menu"
                android:layout_toEndOf="@+id/back"
                android:layout_toRightOf="@+id/back"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"
                android:visibility="gone"
                app:textAllCaps="true"
                app:textfont="light" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="18dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_back" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <com.websinception.megastar.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:drawablePadding="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:text="@string/kickOffYourFriend"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_extra_large"
        app:textfont="@string/MONTSERRAT_REGULAR" />

    <com.websinception.megastar.customView.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:drawablePadding="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_10dp"
        android:text="@string/forEveryoneFriends"
        android:textAlignment="center"
        android:textColor="@color/textColorLight"
        android:textSize="@dimen/text_medium"
        android:visibility="gone"
        app:textfont="@string/MONTSERRAT_REGULAR" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_20"
        android:gravity="center"
        android:orientation="vertical">

        <com.websinception.megastar.customView.CustomTextView
            android:id="@+id/howItWorks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/howItWorks"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_medium"
            app:textfont="@string/MONTSERRAT_REGULAR"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/inviteFriendsLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        app:cardElevation="@dimen/cardElvationMore"
        app:contentPadding="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.websinception.megastar.customView.CustomTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="@string/shareYourInviteCode"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                app:textfont="light" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/invite_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="HYTF45BDBB"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                app:textfont="bold" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/inviteFriendsMore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@color/colorPrimary"
                android:drawablePadding="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10dp"
                android:text="@string/inviteFriendsMore"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                app:textfont="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>