<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UI.startup.StartupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/dimen_15dp">


            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_corner_white"
                android:elevation="@dimen/elevation_4"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:text="@string/alreadygaveAccount"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_regular"
                app:textfont="semibold" />

            <com.websinception.megastar.customView.CustomTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/shedow_button_background"
                android:elevation="@dimen/elevation_4"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:text="@string/register"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize_regular"
                android:visibility="gone"
                app:textfont="semibold" />


            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/letsStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shedow_button_background"
                android:elevation="@dimen/elevation_4"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:text="@string/letsStart"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize_regular"
                android:visibility="gone"
                app:textfont="semibold" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/alreadyUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@drawable/edit_txt_form_bg"
                android:drawableTint="@color/drawbleColor"
                android:elevation="@dimen/elevation_4"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:text="@string/alreadygaveAccount"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/textsize_small"
                android:visibility="gone"
                app:textfont="light" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/haveARefrralCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/elevation_4"
                        android:text="@string/haveARefrralCode"
                        android:textColor="@color/white"
                        app:textfont="light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1">

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/elevation_4"
                        android:gravity="left"
                        android:text="@string/beingAuser"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        app:textfont="light"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>