<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="0dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <com.websinception.megastar.customView.CustomImageView
                android:id="@+id/sdv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle"
                android:layout_margin="@dimen/dimen_8dp"
                app:actualImageScaleType="fitCenter"
                app:fadeDuration="500"
                app:roundAsCircle="true"
                android:padding="@dimen/margin_5"
                app:failureImage="@drawable/ic_avtar"
                app:failureImageScaleType="fitCenter"
                app:placeholderImage="@drawable/ic_avtar"
                app:placeholderImageScaleType="fitCenter"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/sdv"
                android:layout_toLeftOf="@+id/ctv_credits"
                android:layout_toRightOf="@+id/sdv"
                android:layout_toStartOf="@+id/ctv_credits"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/ctv_player_name"
                        style="@style/rippleStyleTransparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ag_list_item_title_txt_size"
                        app:rd_enable="false"
                        app:textfont="Lato-Bold.ttf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal">

                        <com.websinception.megastar.customView.CustomTextView

                            android:id="@+id/teamName"

                            style="@style/SignUPCustomEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="68.2%"
                            android:textColor="@color/textColor"

                            android:textSize="@dimen/ag_list_item_dsc_txt_size"
                            app:rd_enable="false"
                            app:textAllCaps="true"
                            app:textfont="Lato-Medium.ttf" />

                        <ImageView
                            android:id="@+id/iv_player"
                            android:layout_width="@dimen/dimen_10dp"
                            android:layout_height="@dimen/dimen_10dp"
                            android:layout_marginLeft="@dimen/margin_5"
                            app:srcCompat="@drawable/your_player" />

                        <ImageView
                            android:id="@+id/iv_top_player"
                            android:layout_width="@dimen/dimen_10dp"
                            android:layout_height="@dimen/dimen_10dp"

                            android:layout_marginLeft="@dimen/dimen_10dp"
                            app:srcCompat="@drawable/top_player" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_weight="1">

                        <com.websinception.megastar.customView.CustomTextView

                            android:id="@+id/ctv_selected_by"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="68.2%"
                            android:textColor="@color/black"

                            android:textSize="@dimen/ag_list_item_title_txt_size"

                            app:rd_enable="false"
                            style="@style/SignUPCustomEditTextStyle"
                            app:textfont="Lato-Bold.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.websinception.megastar.customView.CustomTextView

                            android:id="@+id/points"
                            style="@style/rippleStyleTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/ag_list_item_title_txt_size"
                            app:rd_enable="false"
                            android:layout_marginEnd="@dimen/dimen_15dp"
                            app:textfont="Lato-Bold.ttf"
                            android:layout_marginRight="@dimen/margin_5" />

                    </LinearLayout>
                </LinearLayout>






            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greyDarkBg"/>

    </LinearLayout>


</android.support.v7.widget.CardView>