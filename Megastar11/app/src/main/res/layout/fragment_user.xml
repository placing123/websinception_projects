<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="horizontal"

    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/user_lyt_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_2sdp"

            android:background="@drawable/unselectedplayerdraft">


            <com.websinception.megastar.customView.CustomImageView
                android:id="@+id/civ_pic_one"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:backgroundImage="@color/black"
                app:placeholderImage="@drawable/player"
                app:roundAsCircle="true" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/user_name_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:singleLine="true"
                android:layout_toRightOf="@+id/civ_pic_one"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Jhony"

                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                app:textAllCaps="true"
                app:textfont="Lato-Black.ttf" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/first_check"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/green_check" />


    </RelativeLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/_22sdp"
        android:layout_gravity="center"

        android:layout_weight="1"
        android:src="@drawable/green_vs" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/user_lyt_two"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_centerVertical="true"

            android:background="@drawable/unselectedplayerdraft">



            <com.websinception.megastar.customView.CustomImageView
                android:id="@+id/civ_pic_two"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_2sdp"

                android:layout_centerVertical="true"
                app:backgroundImage="@color/white"
                app:placeholderImage="@drawable/player"
                app:roundAsCircle="true" />


            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/user_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/civ_pic_two"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_5sdp"
                android:text="Jhony"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                app:textAllCaps="true"
                app:textfont="Lato-Black.ttf" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/second_check"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/green_check" />


    </RelativeLayout>
</LinearLayout>

