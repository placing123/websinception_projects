<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_item_aadhar_verified"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPadding="25dp">

    <LinearLayout
        android:id="@+id/ll_pan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_green_bg_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/green"
            app:srcCompat="@drawable/ic_personal_details" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/ctv_pan_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_adhar_number_is_verified"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textColor"
                app:textfont="light" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/ctv_pan_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_message"
                android:textColor="@color/textColorHint"
                app:textfont="light" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>