<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hi_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.websinception.megastar.customView.CustomImageView
                android:id="@+id/iv_check"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:tint="@color/white"
                app:actualImageScaleType="fitCenter"
                app:fadeDuration="500"
                app:failureImage="@drawable/circle_trans_border_white"
                app:failureImageScaleType="fitCenter"
                app:placeholderImage="@drawable/ic_mark"
                app:placeholderImageScaleType="fitCenter"
                app:roundAsCircle="true" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/ctv_title"
                style="@style/rippleStyleTransparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                app:rd_enable="false"
                app:textfont="light" />

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/ctv_already_added"
                style="@style/rippleStyleTransparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/already_added"
                android:textColor="@color/doneIconColor"
                android:textSize="@dimen/text_very_small"
                app:rd_enable="false"
                app:textfont="light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F3F3F3"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/captain"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_small"
                    app:rd_enable="false"
                    app:textfont="@string/semiBold" />

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/ctv_captain"
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:rd_enable="false"
                    app:textfont="@string/MONTSERRAT_REGULAR" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/item_offset_1"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/vice_captain"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_small"
                    app:rd_enable="false"
                    app:textfont="@string/semiBold" />

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/ctv_vice_captain"
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:rd_enable="false"
                    app:textfont="@string/MONTSERRAT_REGULAR" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_1"
            android:background="@color/colorControlNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/ll_wk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/civ_wk"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="@dimen/dimen_10dp"
                        android:background="@drawable/circle_white_border_light"
                        app:srcCompat="@drawable/gk"
                        />

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/ctv_wk"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|top"
                        android:background="@drawable/circle_blue_bg_white"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        app:srcCompat="@drawable/ic_camera"
                        app:textfont="light" />
                </FrameLayout>

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="GK"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:rd_enable="false"
                    app:textfont="light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/civ_bat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_white_border_light"
                        android:padding="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/def" />

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/ctv_bat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|top"
                        android:background="@drawable/circle_blue_bg_white"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        app:srcCompat="@drawable/ic_camera"
                        app:textfont="light" />
                </FrameLayout>

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="DEF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:rd_enable="false"
                    app:textfont="light" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_bowl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/civ_bowl"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_white_border_light"
                        android:padding="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/mid" />

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/ctv_bowl"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|top"
                        android:background="@drawable/circle_blue_bg_white"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        app:srcCompat="@drawable/ic_camera"
                        app:textfont="light" />
                </FrameLayout>

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="MID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:rd_enable="false"
                    app:textfont="light" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_ar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/civ_ar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_white_border_light"
                        android:padding="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/forword" />

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/ctv_ar"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|top"
                        android:background="@drawable/circle_blue_bg_white"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        app:srcCompat="@drawable/ic_camera"
                        app:textfont="light" />
                </FrameLayout>

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="ST"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    app:rd_enable="false"
                    app:textfont="light" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_1"
            android:background="@color/colorControlNormal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.websinception.megastar.customView.CustomTextView
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="@string/preview"
                    android:textColor="@color/secondary_txt_color"
                    android:textSize="@dimen/text_medium"
                    app:drawableLeftCompat="@drawable/ic_preview"
                    app:rd_enable="false"
                    app:textfont="light" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>