<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hi_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_4sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.websinception.megastar.customView.CustomTextView
            android:id="@+id/ctv_invite_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/bf_Share_this_contest_with_your_friends"
            android:textColor="#99151515"
            android:textSize="@dimen/secondary_txt_size"
            app:drawableRightCompat="@drawable/ic_share" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.websinception.megastar.customView.CustomTextView
                android:id="@+id/contest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp"
                app:textfont="@string/MONTSERRAT_REGULAR" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/customTextViewDiscountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/discount_tag"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="Discount"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="invisible"
                    app:textfont="@string/MONTSERRAT_REGULAR" />

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/customTextViewDiscountInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="* valid For first 2 entry | Expire in 10h:20m"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="invisible"
                    app:textfont="@string/MONTSERRAT_REGULAR" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.websinception.megastar.customView.CustomTextView
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:id="@+id/customTextViewFirstPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_8sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="â‚¹1000"
                android:textColor="#99151515"
                android:textSize="@dimen/_7ssp"
                app:drawableLeftCompat="@drawable/ic_first_place_medal"
                app:textfont="@string/MONTSERRAT_REGULAR" />

            <com.websinception.megastar.customView.CustomTextView
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:id="@+id/multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_8ssp"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="Upto 11"
                android:textColor="#99151515"
                android:textSize="@dimen/_7ssp"
                app:drawableLeftCompat="@drawable/ic_tickets"
                app:textfont="@string/MONTSERRAT_REGULAR" />


            <com.websinception.megastar.customView.CustomTextView
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8ssp"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="Confirm"
                android:textColor="#99151515"
                android:textSize="@dimen/_7ssp"
                app:drawableLeftCompat="@drawable/ic_confirmation"
                app:textfont="@string/MONTSERRAT_REGULAR" />

            <com.websinception.megastar.customView.CustomTextView
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:id="@+id/bonus_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8ssp"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="15.0% Bounus"
                android:textColor="#99151515"
                android:textSize="@dimen/_7ssp"
                app:drawableLeftCompat="@drawable/ic_discount_7dp"
                app:textfont="@string/MONTSERRAT_REGULAR" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/total_winnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_pool"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    app:textAllCaps="true"
                    app:textfont="@string/MONTSERRAT_BOLD" />

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/total_winnings_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_regular"
                    app:textfont="@string/MONTSERRAT_REGULAR"
                    tools:text="15 Lakhs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/winners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winners"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_8ssp"
                    app:textfont="@string/MONTSERRAT_BOLD" />

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/winners_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_5"
                    android:drawableTint="@color/colorPrimary"
                    android:paddingLeft="@dimen/_8ssp"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingRight="@dimen/_8ssp"
                    android:text="6000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_small"
                    app:drawableRightCompat="@drawable/ic_down_arrow"
                    app:textfont="@string/MONTSERRAT_BOLD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <com.websinception.megastar.customView.CustomTextView
                    android:id="@+id/entry_fee"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/entry_fee"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    app:textfont="@string/MONTSERRAT_BOLD" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/customTextViewOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@drawable/bg_cut_text"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingRight="@dimen/_4sdp"
                        android:text="499"
                        android:textColor="#99151515"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="invisible"
                        app:textfont="@string/MONTSERRAT_REGULAR" />


                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/entry_fee_amount"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/auction_btn_green"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_regular"
                        app:textfont="@string/MONTSERRAT_REGULAR"
                        tools:text="499" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/seekBar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/seekbar_drawable"
                    android:thumb="@color/transparent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/spotLeftCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="Only 81,4232 spots left"
                        android:textColor="@color/black"

                        android:textSize="11sp" />

                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/teamsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="1,33,333 Teams"
                        android:textColor="@color/black"

                        android:textSize="11sp" />


                    <com.websinception.megastar.customView.CustomTextView
                        android:id="@+id/joinButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teamsCount"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/shedow_red_background_join_btn"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10dp"
                        android:text="@string/joinCaps"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        app:textfont="@string/MONTSERRAT_BOLD" />


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <com.websinception.megastar.customView.CustomTextView
            android:id="@+id/customTextViewDiscountInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:drawablePadding="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="Discount | Get 50% off from 4th join"
            android:textColor="@color/doneIconColor"
            android:textSize="@dimen/_7ssp"
            android:visibility="invisible"
            app:textfont="@string/MONTSERRAT_BOLD" />


    </LinearLayout>


</android.support.v7.widget.CardView>