    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyToogleTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/yellow</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/yellow</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/yellow</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="StarButton">
        <item name="android:background">@drawable/password_toggle_drawable</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:button">@null</item>
    </style>


    <style name="default_ripple" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#40000000</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_cornerRadius">5dp</item>
    </style>

    <style name="auction_bottom_tab_btn_ripple" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#40000000</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_cornerRadius">17dp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>



    <style name="auctionSpinner" parent="Material.Widget.Spinner">
        <item name="spn_labelEnable">false</item>
        <item name="spn_labelPadding">0dp</item>
        <item name="spn_labelTextColor">@color/white</item>
        <item name="spn_labelEllipsize">end</item>
        <item name="spn_dividerHeight">0dp</item>
        <item name="spn_dividerPadding">0dp</item>
        <item name="spn_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowColor">@color/colorPrimary</item>
        <item name="spn_arrowSize">0dp</item>
        <item name="spn_arrowPadding">0dp</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">50</item>
    </style>

    <style name="EditTextStyle.CreatePrivateContest.Form" parent="android:Widget.EditText">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:background">@drawable/rectangle_solid_white_transparent_radius_8</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
    </style>


    <style name="HomeTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/background_home_tablayout</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/HomeTabTextAppearance</item>
        <item name="android:textSize">@dimen/_5ssp</item>
    </style>


    <style name="HomeTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

