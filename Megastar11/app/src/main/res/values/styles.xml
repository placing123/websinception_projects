        <item name="et_labelTextSize">@dimen/secondary_txt_size</item>
        <item name="et_dividerPadding">@dimen/edit_text_divider_bottom_padding</item>

    </style>

    <style name="FlatWaveColorButtonRippleStyleGray1" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#40636ED8</item>
        <item name="rd_rippleAnimDuration">100</item>
        <item name="rd_delayClick">none</item>
        <item name="rd_maxRippleRadius">5dp</item>
        <item name="rd_cornerRadius">70dp</item>
    </style>

