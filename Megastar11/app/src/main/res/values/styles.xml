<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white_four</item>
        <item name="colorControlActivated">@color/greyish_brown</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="selectedColor">@color/line_select</item>
        <item name="strokeWidth">2.0dip</item>
        <item name="unselectedColor">@color/line_unselect</item>
        <item name="lineWidth">10.0dip</item>
        <item name="gapWidth">6.0dip</item>
    </style>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <!-- Base application theme. -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:windowEnterAnimation">@anim/alert_open</item>
        <item name="android:windowExitAnimation">@anim/dialog_close</item>
    </style>

    <style name="circularLoader">
        <item name="cpd_padding">0dp</item>
        <item name="cpd_initialAngle">0</item>
        <item name="cpd_maxSweepAngle">270</item>
        <item name="cpd_minSweepAngle">1</item>
        <item name="cpd_strokeSize">2dp</item>
        <item name="cpd_strokeColor">@color/white</item>
        <item name="cpd_strokeSecondaryColor">#ffffff</item>
        <item name="cpd_reverse">false</item>
        <item name="cpd_rotateDuration">1000</item>
        <item name="cpd_transformDuration">600</item>
        <item name="cpd_keepDuration">200</item>
        <item name="cpd_transformInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="pv_progressMode">indeterminate</item>
        <item name="cpd_inAnimDuration">0</item>
        <item name="cpd_outAnimDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="rippleStyleTransparent" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#40BFC0C1</item>
        <item name="rd_rippleAnimDuration">100</item>
    </style>

    <style name="FlatWaveColorButtonRippleStyleGray" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">#40BFC0C1</item>
        <item name="rd_rippleAnimDuration">100</item>
    </style>

    <style name="mySpinner" parent="Material.Widget.Spinner">
        <item name="spn_labelEnable">false</item>
        <item name="spn_labelPadding">0dp</item>
        <item name="spn_labelTextColor">@color/colorPrimary</item>
        <item name="spn_labelEllipsize">end</item>
        <item name="spn_dividerHeight">0dp</item>
        <item name="spn_dividerPadding">0dp</item>
        <item name="spn_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowColor">@color/colorPrimary</item>
        <item name="spn_arrowSize">0dp</item>
        <item name="spn_arrowPadding">0dp</item>
        <item name="spn_popupItemAnimation">@anim/abc_slide_in_bottom</item>
        <item name="spn_popupItemAnimOffset">50</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">480dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/greyDarkBg</item>
    </style>


    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="windowNoTitle">true</item>
    </style>

