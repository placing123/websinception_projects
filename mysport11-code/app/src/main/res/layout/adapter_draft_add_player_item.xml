<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_rrot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mw.fantasy.customView.CustomImageView
                android:id="@+id/civ_pic"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                app:backgroundImage="@color/white"
                app:placeholderImage="@drawable/player"
                app:roundAsCircle="true" />

            <com.mw.fantasy.customView.CustomTextView
                android:id="@+id/ctv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Upcoming"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                app:textfont="normal" />

        </LinearLayout>


        <com.mw.fantasy.customView.CustomTextView
            android:id="@+id/ctv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Upcoming"
            android:textColor="@color/black"
            android:textSize="@dimen/secondary_txt_size"
            app:textfont="normal" />

        <com.mw.fantasy.customView.CustomTextView
            android:id="@+id/ctv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="100 Lacs"
            android:textColor="@color/black"
            android:textSize="@dimen/secondary_txt_size"
            app:textfont="normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />
</LinearLayout>