<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/loading_container_padding"
        android:background="@drawable/loader_bg"
        android:layout_width="@dimen/loading_container_size"
        android:layout_height="@dimen/loading_container_size"
        android:layout_centerInParent="true"
        android:gravity="center">

        <com.rey.material.widget.ProgressView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressMode="indeterminate"
            app:pv_progressStyle="@style/circularLoader" />
    </RelativeLayout>


</RelativeLayout>