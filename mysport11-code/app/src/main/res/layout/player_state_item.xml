<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="0dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <com.mw.fantasy.customView.CustomImageView
                android:id="@+id/sdv"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle"

                app:actualImageScaleType="fitCenter"
                app:fadeDuration="500"

                app:failureImage="@drawable/ic_avtar"
                app:failureImageScaleType="fitCenter"
                app:placeholderImage="@drawable/ic_avtar"
                app:placeholderImageScaleType="fitCenter"
                />

            <!--<fantasylls11.customView.CustomTextView
                android:id="@+id/iv_player"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_red"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:text="IND"
                android:gravity="center"
                app:textfont="bold"
                android:padding="@dimen/margin_5"
                app:textAllCaps="true"

                android:textSize="@dimen/text_very_small"
                android:textColor="@color/white"/>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/sdv"
                android:layout_toLeftOf="@+id/ctv_credits"
                android:layout_toRightOf="@+id/sdv"
                android:layout_toStartOf="@+id/ctv_credits"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <com.mw.fantasy.customView.CustomTextView
                        android:id="@+id/ctv_player_name"
                        style="@style/rippleStyleTransparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/darkblack"
                        android:textSize="@dimen/text_small"
                        app:rd_enable="false"
                        app:textfont="@string/MONTSERRAT_REGULAR" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_player"
                            android:layout_width="@dimen/dimen_15dp"
                            android:layout_height="@dimen/dimen_15dp"
                            android:layout_toRightOf="@+id/sdv"
                            app:srcCompat="@drawable/your_player"
                            android:layout_below="@+id/ctv_player_name"/>

                        <ImageView
                            android:id="@+id/iv_top_player"
                            android:layout_width="@dimen/dimen_15dp"
                            android:layout_height="@dimen/dimen_15dp"
                            android:layout_toRightOf="@+id/iv_player"

                            android:layout_marginLeft="@dimen/dimen_10dp"
                            app:srcCompat="@drawable/top_player"
                            android:layout_below="@+id/ctv_player_name"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:layout_weight="1">

                        <com.mw.fantasy.customView.CustomTextView

                            android:id="@+id/ctv_selected_by"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="68.2%"

                            android:textSize="@dimen/text_small"
                            app:rd_enable="false"
                            style="@style/SignUPCustomEditTextStyle"
                            android:textColor="@color/textColorHint"
                            app:textfont="@string/MONTSERRAT_REGULAR" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <com.mw.fantasy.customView.CustomTextView

                            android:id="@+id/points"
                            style="@style/rippleStyleTransparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textAlignment="textEnd"
                            android:textColor="@color/darkblack"
                            android:textSize="@dimen/text_small"
                            app:rd_enable="false"

                            android:layout_marginEnd="@dimen/dimen_15dp"
                            app:textfont="@string/MONTSERRAT_REGULAR"

                            android:layout_marginRight="@dimen/margin_5" />

                    </LinearLayout>
                </LinearLayout>






            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greyDarkBg"/>

    </LinearLayout>


</android.support.v7.widget.CardView>