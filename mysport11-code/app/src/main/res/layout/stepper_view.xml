<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@drawable/bg_white_ract_yellow_bor"
        android:gravity="center">

        <ImageView
            android:id="@+id/minus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_minus"
            android:tint="@color/red" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yellow" />

        <com.mw.fantasy.customView.CustomTextView
            android:id="@+id/current_bid"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/entry_fee"
            android:textColor="#808080"
            android:textSize="@dimen/ah_btn_txt_size"
            app:textfont="Lato-Bold.ttf" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yellow" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_plus"
            android:tint="@color/green" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_overlay"
        android:clickable="true"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_stepper_disable"
        android:gravity="center">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_001_minus"
           />

        <View
            android:visibility="invisible"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yellow" />

        <com.mw.fantasy.customView.CustomTextView
            android:id="@+id/current_bid_x"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/entry_fee"
            android:textColor="#CFD0D4"
            android:textSize="@dimen/ah_btn_txt_size"
            app:textfont="Lato-Bold.ttf" />

        <View
            android:visibility="invisible"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yellow" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_002_plus"
            />
    </LinearLayout>


</FrameLayout>